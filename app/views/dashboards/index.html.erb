<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Dashboard</h1>
  </div>

  <% @rooms.each do |room| %>
    <div class="col-lg-6">
      <!-- <div class="panel panel-red"> -->
      <div class="panel panel-green">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <p>Tempratura ideal</p>
              <div class="huge"><%= "#{ room.temperature_max }ยบ ~ #{ room.temperature_minimum }ยบ" %></div>
            </div>
            <div class="col-xs-6 text-right">
              <p>Tempratura atual</p>
              <div class="huge">24ยบ</div>
              <div>Acima do esperado!</div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <span class="pull-left"><%= room.name %></span>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  <% end %>
</div>