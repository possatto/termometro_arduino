<!DOCTYPE html>
<html>
<head>
	<title>Arduino</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="login-panel panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Login</h3>
            </div>
            <div class="panel-body">
              <%= form_tag '/login' do %>
                <fieldset>
                  <div class="form-group">
                    <%= text_field_tag :email, nil, class: "form-control", placeholder: "E-mail", autofocus: true %>
                  </div>
                  <div class="form-group">
                    <%= password_field_tag :password, nil, class: "form-control", placeholder: "Senha" %>
                  </div>
                  <!-- Change this to a button or input when using this as a form -->
                  <%= submit_tag "Enviar", class: "btn btn-lg btn-success btn-block" %>
                </fieldset>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</body>
</html>
